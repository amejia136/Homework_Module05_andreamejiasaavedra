<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222431"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:src="@android:drawable/ic_menu_view"
        android:tint="#5ED9F6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:height="48dp"
        android:backgroundTint="#2C859A"
        android:ems="10"
        android:fontFamily="monospace"
        android:foregroundTint="#000000"
        android:minHeight="48dp"
        android:text="Who Wants"
        android:textAlignment="center"
        android:textColor="#2C859A"
        android:textColorHighlight="#2C859A"
        android:textColorHint="#2C859A"
        android:textSize="44dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:height="48dp"
        android:backgroundTint="#2C859A"
        android:ems="10"
        android:fontFamily="monospace"
        android:foregroundTint="#000000"
        android:minHeight="48dp"
        android:text="To Be"
        android:textAlignment="center"
        android:textColor="#2C859A"
        android:textColorHighlight="#2C859A"
        android:textColorHint="#2C859A"
        android:textSize="44dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="411dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:height="48dp"
        android:backgroundTint="#2C859A"
        android:ems="10"
        android:fontFamily="monospace"
        android:foregroundTint="#000000"
        android:minHeight="48dp"
        android:text="A Millionaire?"
        android:textAlignment="center"
        android:textColor="#2C859A"
        android:textColorHighlight="#2C859A"
        android:textColorHint="#2C859A"
        android:textSize="44dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:height="48dp"
        android:backgroundTint="#2C859A"
        android:ems="10"
        android:fontFamily="monospace"
        android:foregroundTint="#000000"
        android:minHeight="48dp"
        android:text="By Andrea Mejia Saavedra"
        android:textAlignment="center"
        android:textColor="#2C859A"
        android:textColorHighlight="#2C859A"
        android:textColorHint="#2C859A"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>